<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/redBackground">

    <ImageView
        android:id="@+id/menu_avatar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:padding="16dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_account_circle_white_36dp"/>

    <TextView
        android:id="@+id/menu_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_avatar"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:text="@string/unknown_user"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/menu_dialogs_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_nickname"
        android:padding="8dp"
        android:paddingBottom="16dp"
        android:layout_centerHorizontal="true"
        android:text="@string/menu_dialogs_counter"
        android:textSize="16dp"/>

</RelativeLayout>